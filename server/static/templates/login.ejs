<% layout('./layout') %>
<div class="absolute-center main-page">
    <div class="text-center">
        <h1>Financialyzr</h1>
        <h4>Visualize Your Money</h4>
    </div>
    <div class="panel panel-default">
        <% if(error.length) { %>
            <div class="alert alert-danger" id="loginErrors">
                <%= error %>
            </div>
        <% } %>
        <form action="/auth/login" method="post" id="loginForm">
            <div class="form-group">
                <input type="text" placeholder="Username" name="username" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="password" placeholder="Password" name="password" class="form-control"/>
            </div>
            <div class="form-group">
                <div class="pull-left">
                    <a href="/signup">Sign Up</a>
                </div>
                <div class="pull-right">
                    <button type="submit" id="loginBtn" class="btn btn-primary">Log In</button>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="../js/staticLogin.js" type="text/javascript"></script>